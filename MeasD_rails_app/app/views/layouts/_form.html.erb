<%= form_for([@user, @layout], :html => { :multipart => true }) do |f| %>
<% if @layout.errors.any? %>
<div id="error_explanation">
 <h2><%= pluralize(@layout.errors.count, "error") %> prohibited this layout from being saved:</h2>

 <ul>
   <% @layout.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
</div>
<% end %>

<div class="field">
 <%= f.label :name %><br>
 <%= f.text_field :name %>
</div>
<div class="field">
 <%= f.label :sandbox %><br>
 <%= f.file_field :sandbox %>
</div>
<div class="field">
 <%= f.label :user_id %><br>
 <%= f.number_field :user_id %>
</div>
<div class="actions">
 <%= f.submit "Upload"%>
</div>
<% end %>